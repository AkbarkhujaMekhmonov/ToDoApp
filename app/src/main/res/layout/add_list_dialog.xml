<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Select the color"
        android:id="@+id/txt"
        tools:ignore="HardcodedText" />
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:background="@drawable/buttun_back"
        app:layout_constraintRight_toLeftOf="@+id/blue"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/blue"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:background="@drawable/blue_back"
        app:layout_constraintRight_toLeftOf="@+id/purple"
        app:layout_constraintLeft_toRightOf="@+id/black"/>
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/purple"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:background="@drawable/purple_back"
        app:layout_constraintLeft_toRightOf="@+id/blue"
        app:layout_constraintRight_toLeftOf="@+id/yellow"
        android:layout_marginTop="5dp" />
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/yellow"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:background="@drawable/yellow_back"
        app:layout_constraintLeft_toRightOf="@+id/purple"
        app:layout_constraintRight_toLeftOf="@+id/red"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/red"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:background="@drawable/red_back"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/yellow"
        app:layout_constraintRight_toLeftOf="@+id/green"/>
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/green"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:background="@drawable/green_back"
        app:layout_constraintLeft_toRightOf="@+id/red"
        app:layout_constraintRight_toLeftOf="@+id/white"/>
    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:background="@drawable/white_back"
        app:layout_constraintLeft_toRightOf="@+id/green"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:hint="Enter list title"
        android:paddingStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/title_list"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@+id/title_list"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/add_btn"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/add_btn"/>






</androidx.constraintlayout.widget.ConstraintLayout>